- model_class = Dealership
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @dealership.name
%p
  %strong= model_class.human_attribute_name(:website_url) + ':'
  %br
  = @dealership.website_url
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @dealership.email

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), dealerships_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_dealership_path(@dealership), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), dealership_path(@dealership), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
