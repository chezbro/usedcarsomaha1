- model_class = Vehicle
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:dealer_id)
      %th= model_class.human_attribute_name(:vin)
      %th= model_class.human_attribute_name(:stock_number)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:make)
      %th= model_class.human_attribute_name(:model)
      %th= model_class.human_attribute_name(:model_code)
      %th= model_class.human_attribute_name(:trim)
      %th= model_class.human_attribute_name(:bodystyle)
      %th= model_class.human_attribute_name(:transmission)
      %th= model_class.human_attribute_name(:drive_train)
      %th= model_class.human_attribute_name(:doors)
      %th= model_class.human_attribute_name(:exterior_color)
      %th= model_class.human_attribute_name(:interior_color)
      %th= model_class.human_attribute_name(:truck_cab)
      %th= model_class.human_attribute_name(:truck_bed)
      %th= model_class.human_attribute_name(:msrp)
      %th= model_class.human_attribute_name(:invoice)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:wholesale_price)
      %th= model_class.human_attribute_name(:retail_price)
      %th= model_class.human_attribute_name(:sale_price)
      %th= model_class.human_attribute_name(:mileage)
      %th= model_class.human_attribute_name(:comments)
      %th= model_class.human_attribute_name(:options)
      %th= model_class.human_attribute_name(:images)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:certified)
      %th= model_class.human_attribute_name(:engine)
      %th= model_class.human_attribute_name(:engine_size)
      %th= model_class.human_attribute_name(:fule)
      %th= model_class.human_attribute_name(:dealership)
      %th= model_class.human_attribute_name(:dealership_address1)
      %th= model_class.human_attribute_name(:dealership_address_2)
      %th= model_class.human_attribute_name(:dealership_city)
      %th= model_class.human_attribute_name(:dealership_state)
      %th= model_class.human_attribute_name(:dealership_postalcode)
      %th= model_class.human_attribute_name(:dealership_phone)
      %th= model_class.human_attribute_name(:dealership_url)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @vehicles.each do |vehicle|
      %tr
        %td= link_to vehicle.id, vehicle_path(vehicle)
        %td= vehicle.dealer_id
        %td= vehicle.vin
        %td= vehicle.stockno
        %td= vehicle.year
        %td= vehicle.make
        %td= vehicle.model
        %td= vehicle.model_code
        %td= vehicle.trim
        %td= vehicle.bodystyle
        %td= vehicle.transmission
        %td= vehicle.drive_train
        %td= vehicle.doors
        %td= vehicle.exterior_color
        %td= vehicle.interior_color
        %td= vehicle.truck_cab
        %td= vehicle.truck_bed
        %td= vehicle.msrp
        %td= vehicle.invoice
        %td= vehicle.price
        %td= vehicle.wholesale_price
        %td= vehicle.retail_price
        %td= vehicle.sale_price
        %td= vehicle.mileage
        %td= vehicle.comments
        %td= vehicle.options
        %td= vehicle.images
        %td= vehicle.type
        %td= vehicle.certified
        %td= vehicle.engine
        %td= vehicle.engine_size
        %td= vehicle.fuel
        %td= vehicle.dealership
        %td= vehicle.dealership_address1
        %td= vehicle.dealership_address2
        %td= vehicle.dealership_city
        %td= vehicle.dealership_state
        %td= vehicle.dealership_postalcode
        %td= vehicle.dealership_phone
        %td= vehicle.dealership_url
        %td=l vehicle.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_vehicle_path(vehicle), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), vehicle_path(vehicle), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_vehicle_path, :class => 'btn btn-primary'
